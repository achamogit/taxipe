<%= simple_form_for @vehicle_brand, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@vehicle_brand[:name]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicle_brands_path, :class => 'btn btn-default' %>
<% end %>
