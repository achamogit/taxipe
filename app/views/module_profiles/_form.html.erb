<%= simple_form_for @module_profile, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :idmodulo %>
  <%= error_span(@module_profile[:idmodulo]) %>
  <%= f.input :idperfil %>
  <%= error_span(@module_profile[:idperfil]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                module_profiles_path, :class => 'btn btn-default' %>
<% end %>
