<%- model_class = Modulo -%>
<div class="page-header">
  <table>
    <tr>
      <td  style="width:60px"><img src="<%= asset_path 'modulos.png' %>"  style="width:50px"></td>
      <td><h1>Modules<h1></td>
    </tr>
  </table>
  
  
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @modulos.each do |modulo| %>
      <tr>
        <td><%= link_to modulo.id, modulo_path(modulo) %></td>
        <td><%= modulo.name %></td>
        <td><%= modulo.description %></td>
        <td><%= modulo.status %></td>
        <td><%=l modulo.created_at %></td>
        <td>
           <%= link_to image_tag('modulos_edit.png', width: '30'), edit_modulo_path(modulo)  %>
                      <%= link_to image_tag('modulos_del.png', width: '30'), modulo_path(modulo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_modulo_path(modulo), :class => 'btn btn-default btn-xs' %>
                     
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      modulo_path(modulo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 <table>
    <tr>
      <td><%= link_to image_tag('modulos_add.png', width: '40'), new_modulo_path  %></td>
    </tr>
    <tr>
      <td style="text-align: center">New</td>
    </tr>
  </table>

