<%= simple_form_for @modulo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@modulo[:name]) %>
  <%= f.input :description %>
  <%= error_span(@modulo[:description]) %>
  <%= f.input :status %>
  <%= error_span(@modulo[:status]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                modulos_path, :class => 'btn btn-default' %>
<% end %>
