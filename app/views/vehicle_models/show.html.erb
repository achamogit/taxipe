<%- model_class = VehicleModel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @vehicle_model.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vehicle_brand_id) %>:</strong></dt>
  <dd><%= VehicleBrand.find(@vehicle_model.vehicle_brand_id).name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              vehicle_models_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vehicle_model_path(@vehicle_model), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vehicle_model_path(@vehicle_model),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
